<div class="skin-blue sidebar-mini">
	<div class="wrapper">
		<header class="main-header">
			<%= render "privates/navbarprivate" %>
		</header>
		<aside class="main-sidebar">
			<%= render "privates/menubar" %>
		</aside>
		<div class="content-wrapper">
      <div class="perfil-content">
        <div class="panel panel-default col-xs-10 col-xs-offset-1 min-height">
          <h1 class="col-xs-offset-1"><i class="fa fa-cutlery"></i> Dietas</h1>
          <h4 class="col-xs-offset-1">Tenha acesso a todas as dietas de seus pacientes de todas suas clínicas, adicione novas, modifique-as, gerencie-as...</h4>
          <div class="div-content">
            <a href="/newdiet" class="btn btn-primary margin col-xs-offset-1"><i class="fa fa-plus-circle"></i> Cadastrar Nova Dieta</a>
          </div>
        <div class="table-responsive col-xs-12 div-content">
            <table class="table table-hover">
              <tr>
                <td class="text-center"><strong>Paciente</strong></td>
                <td class="text-center"><strong>Data de Início</strong></td>
                <td class="text-center"><strong>Data de término</strong></td>
                <td class="text-center"><strong>Duração</strong></td>
                <td class="text-center"><strong>Total de Calorias</strong></td>
                <td class="text-center">
                  <strong>Tipo</strong>
                </td>
              </tr>
              <% @diets_for_user.each do |diet| %>
                <tr>
                  <td class="text-center"><%= diet.patient.name %></td>
                  <td class="text-center"><%= diet.dateStart %></td>
            			<td class="text-center"><%= diet.dateEnd %></td>
                  <td class="text-center"><%= diet.duration %> dias</td>
                  <td class="text-center">
                    <%= diet.getTotalCalories %>
                  </td>
                  <td class="text-center"><%= link_to '', diet, title: 'Details', class: 'btn btn-success btn-xs fa fa-ellipsis-h' %> <%= link_to '', edit_diet_path(diet), title: 'Editar', class: 'btn btn-primary btn-xs fa fa-pencil' %> <%= link_to '', diet, method: :delete, data: { confirm: 'Are you sure?' }, title:'Delete', class: 'btn btn-danger btn-xs fa fa-times' %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
		</div>
	</div>
	<%= render "privates/footerprivate" %>
</div>
