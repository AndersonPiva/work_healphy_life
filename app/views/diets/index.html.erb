<div class="skin-blue sidebar-mini">
	<div class="wrapper">
		<header class="main-header">
			<%= render "privates/navbarprivate" %>
		</header>
		<aside class="main-sidebar">
			<%= render "privates/menubar" %>
		</aside>
		<div class="content-wrapper">
      <div class="perfil-content">
        <div class="panel panel-default col-xs-10 col-xs-offset-1 min-height">
          <h1 class="col-xs-offset-1"><i class="fa fa-cutlery"></i> <%= t('diets') %></h1>
          <h4 class="col-xs-offset-1"><%= t('diets_patient_one') %></h4>
        <div class="table-responsive col-xs-12 div-content">
            <table class="table table-hover">
              <tr>
                <td class="text-center"><strong><%= t('patient') %></strong></td>
                <td class="text-center"><strong><%= t('date_start') %></strong></td>
                <td class="text-center"><strong><%= t('date_end') %></strong></td>
                <td class="text-center"><strong><%= t('duration') %></strong></td>
                <td class="text-center"><strong><%= t('total_calories') %></strong></td>
                <td class="text-center">
                  <strong><%= t('type') %></strong>
                </td>
								<td class="text-center">
									<strong><%= t('options') %></strong>
								</td>
              </tr>
              <% current_patient.diets.each do |diet| %>
                <tr>
                  <td class="text-center"><%= diet.patient.name %></td>
                  <td class="text-center"><%= diet.dateStart.strftime("%d/%m/%y") %></td>
            			<td class="text-center"><%= diet.dateEnd.strftime("%d/%m/%y") %></td>
                  <td class="text-center"><%= diet.duration %> dias</td>
                  <td class="text-center">
                    <%= diet.getTotalCalories %>
                  </td>
									<td class="text-center">
										<%= diet.kind %>
									</td>
                  <td class="text-center"><%= link_to '', diet_path(diet, format: :pdf), title: 'Clique para abrir em pdf', class: 'btn btn-default btn-sm fa fa-file-pdf-o', target: '_blank' %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
		</div>
	</div>
	<%= render "privates/footerprivate" %>
</div>
