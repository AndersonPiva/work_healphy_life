<div class="skin-blue sidebar-mini min-height">
	<div class="wrapper">
		<header class="main-header">
			<%= render "privates/navbarprivate" %>
		</header>
		<aside class="main-sidebar">
			<%= render "privates/menubar" %>
		</aside>
		<div class="content-wrapper">
      <div class="perfil-content">
        <div class="panel panel-default col-xs-10 col-xs-offset-1">
          <h1 class="col-xs-offset-1"><i class="fa fa fa-check-circle"></i> <%= t('realizations_trainings') %></h1>
          <h4 class="col-xs-offset-1"><%= t('realizations_trainings_one') %></h4>
          <div class="table-responsive col-xs-12 div-content">
            <table class="table table-hover">
              <tr>
                <td class="text-center"><strong><%= t('date_of') %></strong></td>
                <td class="text-center"><strong><%= t('patient') %></strong></td>
                <td class="text-center"><strong><%= t('training') %></strong></td>
                <td class="text-center"><strong>Status</strong></td>
                <td class="text-center">
                  <strong><%= t('options') %></strong>
                </td>
              </tr>
              <% @realizations_for_user.each do |realization| %>
                <tr>
                  <td class="text-center"><%= realization.date %></td>
                  <td class="text-center"><%= realization.patient.name %></td>
                  <td class="text-center"><%= realization.training.muscularGroups %></td>
                  <td class="text-center"><%= realization.status %></td>
                  <td class="text-center"><%= link_to '', realization, title: t('details'), class:'btn btn-success btn-xs fa fa-ellipsis-h' %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
		</div>
	</div>
	<%= render "privates/footerprivate" %>
</div>
