<div class="skin-blue sidebar-mini">
	<div class="wrapper">
		<header class="main-header">
			<%= render "privates/navbarprivate" %>
		</header>
		<aside class="main-sidebar">
			<%= render "privates/menubar" %>
		</aside>
		<div class="content-wrapper">
      <div class="perfil-content">
        <div class="panel panel-default col-xs-10 col-xs-offset-1 min-height">
          <h1 class="col-xs-offset-1"><i class="fa fa-building"></i> Pesagens</h1>
          <h4 class="col-xs-offset-1">Tenha acesso a todas a todas as pesagens de seus pacientes de todas as suas clínicas, adicione novas, atualize-as...</h4>
          <div class="div-content">
            <a href="/newweighing" class="btn btn-primary margin col-xs-offset-1"><i class="fa fa-plus-circle"></i> Cadastrar Nova Pesagem</a>
          </div>
          <div class="table-responsive col-xs-12 div-content">
            <table class="table table-hover">
              <tr>
                <td class="text-center"><strong>Data</strong></td>
                <td class="text-center"><strong>Paciente</strong></td>
                <td class="text-center"><strong>Peso</strong></td>
                <td class="text-center"><strong>Opções</strong></td>
              </tr>
              <% @weighings_foruser.each do |weighing| %>
                <tr>
                  <td class="text-center"><%= weighing.dateWeighing %></td>
                  <td class="text-center"><%= weighing.patient.name %></td>
                  <td class="text-center"><%= weighing.weight %></td>
                  <td class="text-center"><%= link_to '', weighing, title: 'Details', class: 'btn btn-success btn-xs fa fa-ellipsis-h' %> <%= link_to '', edit_weighing_path(weighing), title: 'Editar', class: 'btn btn-primary btn-xs fa fa-pencil' %> <%= link_to '', weighing, method: :delete, data: { confirm: 'Are you sure?' } , title: 'Delete', class: 'btn btn-danger btn-xs fa fa-times'%></td>
                </tr>
                <% end %>
            </table>
          </div>
        </div>
      </div>
		</div>
	</div>
	<%= render "privates/footerprivate" %>
</div>
