<div class="skin-blue sidebar-mini">
	<div class="wrapper">
		<header class="main-header">
			<%= render "privates/navbarprivate" %>
		</header>
		<aside class="main-sidebar">
			<%= render "privates/menubar" %>
		</aside>
		<div class="content-wrapper">
      <div class="perfil-content">
        <div class="panel panel-default col-xs-10 col-xs-offset-1 min-height">
					<div id="notice" class="col-xs-offset-1">
						<%= notice %>
					</div>
          <h1 class="col-xs-offset-1"><i class="fa fa-building"></i> <%= t('weighings') %></h1>
          <h4 class="col-xs-offset-1"><%= t('weighings_one') %></h4>
          <div class="div-content">
            <%= link_to t('register_new_weighing'), new_weighing_path, class: 'col-xs-offset-1 margin btn btn-primary fa fa-plus-circle' %>
          </div>
          <div class="table-responsive col-xs-12 div-content">
            <table class="table table-hover">
              <tr>
                <td class="text-center"><strong><%= t('date_of') %></strong></td>
                <td class="text-center"><strong><%= t('patient') %></strong></td>
                <td class="text-center"><strong><%= t('weight') %></strong></td>
                <td class="text-center"><strong><%= t('options') %></strong></td>
              </tr>
              <% current_patient.weighings.each do |weighing| %>
                <tr>
                  <td class="text-center"><%= weighing.dateWeighing %></td>
                  <td class="text-center"><%= weighing.patient.name %></td>
                  <td class="text-center"><%= weighing.weight %></td>
                  <td class="text-center"><%= link_to '', weighing, title: t('details'), class: 'btn btn-success btn-xs fa fa-ellipsis-h' %> <%= link_to '', edit_weighing_path(weighing), title: t('edit'), class: 'btn btn-primary btn-xs fa fa-pencil' %> <%= link_to '', weighing, method: :delete, data: { confirm: t('sure') } , title: 'Delete', class: 'btn btn-danger btn-xs fa fa-times'%></td>
                </tr>
                <% end %>
            </table>
          </div>
        </div>
      </div>
		</div>
	</div>
	<%= render "privates/footerprivate" %>
</div>
