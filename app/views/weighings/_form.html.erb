<%= form_for(@weighing) do |f| %>
<% if @weighing.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@weighing.errors.count, "error") %>
    prohibited this weighing from being saved:</h2>

  <ul>
    <% @weighing.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-horizontal">
  <legend>
    <i class="fa fa-tags"></i>
    Dados Gerais
  </legend>
  <div class="form-group field">
    <label class="col-sm-2 control-label" for="data">Data</label>
    <div class="col-sm-9">
      <%=f.date_select :dateWeighing %>
    </div>
  </div>
  <div class="form-group field">
    <label class="col-sm-2 control-label" for="horario">Paciente</label>
    <div class="col-sm-9">
      <%= f.collection_select(:patient_id, current_user.patients, :id, :name, prompt: 'Por favor selecione o paciente' , class: 'form-control') %>
    </div>
  </div>
  <div class="form-group field">
    <label class="col-sm-2 control-label" for="preco">Peso</label>
    <div class="col-sm-9">
      <%= f.text_field :weight, :placeholder => 'Digite o peso do paciente', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-5">
      <button class="btn btn-primary btn-lg" type="submit">
        <i class="fa fa-save"></i>
        Salvar
      </button>
    </div>
  </div>
</div>
<% end %>
