<%= form_for(@weighing) do |f| %>
<%= error_messages(@weighing) %>
<div class="form-horizontal">
  <legend>
    <i class="fa fa-tags"></i>
    <%= t('general_data') %>
  </legend>
  <div class="form-group field">
    <label class="col-sm-2 control-label" for="data"><%= t('date_of') %></label>
    <div class="col-sm-9">
      <%=f.date_select :dateWeighing %>
    </div>
  </div>
  <div class="form-group field">
    <label class="col-sm-2 control-label" for="preco"><%= t('weight') %></label>
    <div class="col-sm-9">
      <%= f.text_field :weight, :placeholder => t('write_patient_weight'), class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-5">
      <button class="btn btn-primary btn-lg" type="submit">
        <i class="fa fa-save"></i>
        <%= t('save') %>
      </button>
    </div>
  </div>
</div>
<% end %>
