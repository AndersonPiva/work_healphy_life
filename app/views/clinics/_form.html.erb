<%= form_for(@clinic) do |f| %>
  <% if @clinic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@clinic.errors.count, "error") %> prohibited this clinic from being saved:</h2>

      <ul>
      <% @clinic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-horizontal">
  <legend>
    <i class="fa fa-tags"></i> Dados Gerais
  </legend>
  <div class="form-group field">
    <label for="nome" class="col-sm-2 control-label">Nome</label>
    <div class="col-sm-9">
       <%= f.text_field :name,:placeholder => 'Digite o nome da sua clinica', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group field">
    <label for="telefone1" class="col-sm-2 control-label">Telefone 1</label>
    <div class="col-sm-9">
      <%= f.text_field :telephone1,:placeholder => 'Digite o telefone principal de sua clinica' ,class: 'form-control' %>
    </div>
  </div>
  <div class="form-group field">
    <label for="telefone2" class="col-sm-2 control-label">Telefone 2</label>
    <div class="col-sm-9">
      <%= f.text_field :telephone2, :placeholder => 'Digite o telefone alternativo de sua clinica', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group field">
    <label for="cpf" class="control-label col-sm-2">CPF/CNPJ</label>
    <div class="col-sm-9">
         <%= f.text_field :cpfCnpj, :placeholder => 'Digite o número de CPF/CNPJ da sua clinica', class: 'form-control' %>
    </div>
  </div>
  <legend>
    <i class="fa fa-map-marker"></i> Dados de Endereço
  </legend>

  <div class="form-group">
    <label for="bairro" class="control-label col-sm-2">Bairro</label>
    <div class="col-sm-9">
      <input type="text" placeholder="Digite o nome do seu Bairro" class="form-control" />
    </div>
  </div>
  <div class="form-group">
    <label for="rua" class="control-label col-sm-2">Rua</label>
    <div class="col-sm-5">
      <input type="text" placeholder="Digite o nome do seu Bairro" class="form-control" />
    </div>
    <label for="numero" class="control-label col-sm-2">Número</label>
    <div class="col-sm-2">
      <input type="text" placeholder="Digite o número da sua residência" class="form-control" />
    </div>
  </div>
  <div class="form-group">
    <label for="cep" class="control-label col-sm-2">CEP</label>
    <div class="col-sm-5">
      <input type="text" placeholder="Insira seu CEP" class="form-control" />
    </div>
    <label for="referencia" class="control-label col-sm-2">Referência</label>
    <div class="col-sm-2">
      <input type="text" placeholder="Digite sua referência" class="form-control" />
    </div>
  </div>
  <div class="form-group">
    <label for="cidade" class="control-label col-sm-2">Cidade</label>
    <div class="col-sm-9">
      <select class="form-control">
        <option>Xanxerê</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="estado" class="control-label col-sm-2">Estado</label>
    <div class="col-sm-9">
      <select class="form-control">
        <option>Santa Catarina</option>
      </select>
    </div>
  </div>
  <div class="field">
    <%= f.text_field :user_id,value:current_user.id ,class: "hidden-xs hidden-sm hidden-md hidden-lg hidden-xl" %>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-5">
      <button type="submit" class="btn btn-primary btn-lg">
        <i class="fa fa-save"></i> Salvar
      </button>
    </div>
  </div>
</div>
</div>
</div>
<% end %>
