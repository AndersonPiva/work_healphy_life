<%= render 'publics/navbarpublic' %>
<div class="page-container">
  <div class="container">
    <ul class="list-inline">
      <li>
        <%= link_to '',new_user_session_path, class: 'fa fa-home fa-2x', title: 'Home' %>
      </li>
      <li class="lead">
        >
      </li>
      <li>
        <i class="fa fa-refresh fa-2x" title="<%= t('recovery_password') %>"></i>
      </li>
    </ul>
    <div class="panel panel-default">
      <div class="panel-body">
        <h1><%= t('recovery_password') %></h1>
        <div class="div-content">
          <h1><%= t('i_forgot_password') %></h1>
          <h4 class="line-height"> <%= t('forgot_password_one') %>
          </h4>
        </div>
        <img id="recovery" alt="Recovery logo" src="/assets/recovery.jpg" class="img-responsive col-xs-12 col-sm-6 div-content pull-rigth"/>
        <div class="form-personalite div-content">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>
            <div class="form-group field">
              <label for="email" class="col-xs-12 col-sm-6">E-mail</label>
              <div class="col-xs-12 col-sm-6">
                <%= f.email_field :email, autofocus: true, :placeholder => t('email'), class: 'form-control' %>
              </div>
            </div>
            <div class="form-group field">
              <div class="col-xs-12 col-sm-6">
                <button type="submit" class="btn btn-primary"><%= t('send_recovery_password') %></button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'publics/footerpublic' %>
