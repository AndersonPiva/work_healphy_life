<div class="skin-blue sidebar-mini">
	<div class="wrapper">
		<header class="main-header">
			<%= render "privates/navbarprivate" %>
		</header>
		<aside class="main-sidebar">
			<%= render "privates/menubar" %>
		</aside>
		<div class="content-wrapper">
      <div class="perfil-content">
        <div class="panel panel-default col-xs-10 col-xs-offset-1 min-height">
          <h1 class="col-xs-offset-1"><i class="fa fa-users"></i>Pacientes</h1>
          <h4 class="col-xs-offset-1">Tenha acesso a todas a todos os seus pacientes de todas as suas clínicas, adicione novos, atualize-os...</h4>
          <div class="div-content">
            <a href="/newpatient" class="btn btn-primary margin col-xs-offset-1"><i class="fa fa-plus-circle"></i> Cadastrar Novo Paciente</a>
            <div class="panel panel-default col-xs-10 col-xs-offset-1 div-content">
						<%= search_form_for @q do |f| %>
							<div class="form-horizontal">
                <legend>
                  <i class="fa fa-search"></i> Pesquisar Pacientes
                </legend>
                <div class="form-group col-xs-12 col-xs-offset-1">
                  <%= f.search_field :name_cont, :placeholder => 'Digite o nome do paciente que deseja buscar', class: 'form-control' %>
                </div>
								<div class="form-group col-xs-1">
									<button type="submit" class="btn btn-primary" title="Pesquisar"><i class="fa fa-search"></i></button>
								</div>
              </div>
							<% end %>
            </div>
          </div>
          <div class="table-responsive col-xs-12">
            <table class="table table-hover">
              <tr>
                <td class="text-center"><strong><%= sort_link(@q, :name) %></strong></td>
                <td class="text-center"><strong>E-mail</strong></td>
                <td class="text-center"><strong>Endereço</strong></td>
                <td class="text-center"><strong>Tel.</strong></td>
                <td class="text-center"><strong>Opções</strong></td>
              </tr>
              <% @patients_for_user.each do |patient| %>
              <tr>
                <td class="text-center"><%= patient.name  %></td>
 	              <td class="text-center"><%= patient.email %></td>
  	            <td class="text-center">-</td>
                <td class="text-center"><%= patient.telephone %></td>
                <td class="text-center"><%= link_to '', patient,title:"Details",class:'btn btn-success btn-xs fa fa-ellipsis-h' %> <%= link_to '', edit_patient_path(patient),title:"Edit",class:'btn btn-primary btn-xs fa fa-pencil' %> <%= link_to '', patient, method: :delete, data: { confirm: 'Are you sure?' }, title:'Delete',class:'btn btn-danger btn-xs fa fa-times' %></td>
              </tr>
               <% end %>
            </table>
          </div>
        </div>
      </div>
		</div>
	</div>
	<%= render "privates/footerprivate" %>
</div>
