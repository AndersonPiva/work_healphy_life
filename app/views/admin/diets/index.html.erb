<div class="skin-blue sidebar-mini">
	<div class="wrapper">
		<header class="main-header">
			<%= render "privates/navbarprivate" %>
		</header>
		<aside class="main-sidebar">
			<%= render "privates/menubar" %>
		</aside>
		<div class="content-wrapper">
      <div class="perfil-content">
        <div class="panel panel-default col-xs-10 col-xs-offset-1 min-height">
          <h1 class="col-xs-offset-1"><i class="fa fa-cutlery"></i> <%= t('diets') %></h1>
          <h4 class="col-xs-offset-1"><%= t('diets_one') %></h4>
          <div class="div-content">
            <%= link_to t('register_new_diet'), new_admin_diet_path, class: 'col-xs-offset-1 margin btn btn-primary fa fa-plus-circle' %>
          </div>
        <div class="table-responsive col-xs-12 div-content">
            <table class="table table-hover">
              <tr>
                <td class="text-center"><strong><%= t('patient') %></strong></td>
                <td class="text-center"><strong><%= t('date_start') %></strong></td>
                <td class="text-center"><strong><%= t('date_end') %></strong></td>
                <td class="text-center"><strong><%= t('duration') %></strong></td>
                <td class="text-center"><strong><%= t('total_calories') %></strong></td>
                <td class="text-center">
                  <strong><%= t('type') %></strong>
                </td>
								<td class="text-center">
									<strong><%= t('options') %></strong>
								</td>
              </tr>
              <% @diets_for_user.each do |diet| %>
                <tr>
                  <td class="text-center"><%= diet.patient.name %></td>
                  <td class="text-center"><%= diet.dateStart %></td>
            			<td class="text-center"><%= diet.dateEnd %></td>
                  <td class="text-center"><%= diet.duration %> dias</td>
                  <td class="text-center">
                    <%= diet.getTotalCalories %>
                  </td>
									<td class="text-center">
										<%= diet.kind %>
									</td>
                  <td class="text-center"><%= link_to '', admin_diet_path(diet), title: t('details'), class: 'btn btn-success btn-xs fa fa-ellipsis-h' %> <%= link_to '', edit_admin_diet_path(diet), title: t('edit'), class: 'btn btn-primary btn-xs fa fa-pencil' %> <%= link_to '', admin_diet_path(diet), method: :delete, data: { confirm: t('sure') }, title:'Delete', class: 'btn btn-danger btn-xs fa fa-times' %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
		</div>
	</div>
	<%= render "privates/footerprivate" %>
</div>
