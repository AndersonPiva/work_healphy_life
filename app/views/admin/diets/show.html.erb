<div class="skin-blue sidebar-mini">
	<div class="wrapper">
		<header class="main-header">
			<%= render "privates/navbarprivate" %>
		</header>
		<aside class="main-sidebar">
			<%= render "privates/menubar" %>
		</aside>
		<div class="content-wrapper">
      <div class="perfil-content">
        <div class="panel panel-default col-xs-10 col-xs-offset-1">
          <h1 class="col-xs-offset-1"><i class="fa fa-cutlery"></i> <%= t('details_of_diet') %></h1>
          <h4 class="col-xs-offset-1"><%= t('details_of_diet_one') %></h4>
          <div class="div-content">
            <div class="panel panel-default col-xs-10 col-xs-offset-1">
              <div class="form-horizontal">
                <legend>
                  Dados Gerais
                </legend>
                <div class="form-group">
                  <label for="patient" class="control-label col-sm-3"><%= t('patient') %></label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" value="<%= @diet.patient.name %>" disabled/>
                  </div>
                </div>
                <div class="form-group">
                  <label for="dateStart" class="control-label col-sm-3"> <%= t('date_start') %> </label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" value="<%= @diet.dateStart.strftime("%d/%m/%y") %>" disabled/>
                  </div>
                </div>
                <div class="form-group">
                  <label for="label" class="control-label col-sm-3"><%= t('date_end') %></label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" value="<%= @diet.dateEnd.strftime("%d/%m/%y") %>" disabled/>
                  </div>
                </div>
                <div class="form-group">
                  <label for="kind" class="control-label col-sm-3"><%= t('type') %></label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" value="<%= @diet.kind %>" disabled/>
                  </div>
                </div>
                <legend>
                  <i class="fa fa-star"></i> <%= t('meals') %>
                </legend>
                <div class="table-responsive">
                  <table class="table table-hover">
                    <tr>
                      <td class="text-center">
                        <strong><%= t('name') %></strong>
                      </td>
                      <td class="text-center">
                        <strong><%= t('hour') %></strong>
                      </td>
                      <td class="text-center">
                        <strong><%= t('foods') %></strong>
                      </td>
                      <td class="text-center">
                        <strong><%= t('total_calories') %></strong>
                      </td>
                    </tr>
                    <% @diet.meals.each do |meal| %>
                      <tr>
                        <td class="text-center">
                          <%= meal.name %>
                        </td>
                        <td class="text-center">
                          <%= meal.time.strftime("%H:%m") %>
                        </td>
                        <td class="text-center">
                          <%= meal.description %>
                        </td>
                        <td class="text-center">
                          <%= meal.totalCalories %>
                        </td>
                      </tr>
                    <% end %>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
		</div>
	</div>
	<%= render "privates/footerprivate" %>
</div>
