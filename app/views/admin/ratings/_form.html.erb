<%= simple_form_for([:admin,@rating]) do |f| %>
  <%= error_messages(@rating) %>
  <div class="form-horizontal">
    <legend>
      <i class="fa fa-tags"></i> <%= t('general_data') %>
    </legend>
    <div class="form-group">
      <label for="patient" class="control-label col-sm-3"><%= t('patient') %></label>
      <div class="col-sm-9">
          <%= f.collection_select(:patient_id, current_user.patients, :id, :name, prompt: t('please_patient') , class: 'form-control') %>
      </div>
    </div>
    <div class="form-group">
      <label for="handleDiameter" class="control-label col-sm-3"><%= t('handleDiameter_view') %></label>
      <div class="col-sm-9">
        <%= f.text_field :handleDiameter, :placeholder => t('write_handle_diameter'), class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label for="kneeDiameter" class="control-label col-sm-3"><%= t('kneeDiameter_view') %></label>
      <div class="col-sm-9">
        <%= f.text_field :kneeDiameter, :placeholder => t('write_knee_diameter'), class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label for="leg" class="control-label col-sm-3"><%= t('leg_view') %></label>
      <div class="col-sm-9">
        <%= f.text_field :leg, :placeholder => t('write_leg'), class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label for="belly" class="control-label col-sm-3"><%= t('belly_view') %></label>
      <div class="col-sm-9">
        <%= f.text_field :belly, :placeholder => t('write_belly'), class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label for="chest" class="control-label col-sm-3"><%= t('chest_view') %></label>
      <div class="col-sm-9">
        <%= f.text_field :chest, :placeholder => t('write_chest'), class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 col-sm-offset-5">
        <button type="submit" class="btn btn-primary btn-lg">
          <i class="fa fa-save"></i> <%= t('save') %>
        </button>
      </div>
    </div>
  </div>
<% end %>
