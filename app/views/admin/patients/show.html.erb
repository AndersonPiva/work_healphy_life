<div class="skin-blue sidebar-mini">
	<div class="wrapper">
		<header class="main-header">
			<%= render "privates/navbarprivate" %>
		</header>
		<aside class="main-sidebar">
			<%= render "privates/menubar" %>
		</aside>
		<div class="content-wrapper">
      <div class="perfil-content">
        <div class="panel panel-default col-xs-10 col-xs-offset-1">
          <h1 class="col-xs-offset-1"><i class="fa fa-plus-circle"></i> Detalhes do Paciente</h1>
          <h4 class="col-xs-offset-1"> Veja o perfil detalhado do seu Paciente.</h4>
          <div class="div-content">
            <div class="panel panel-default col-xs-10 col-xs-offset-1">
              <div class="form-horizontal">
              <legend>
                <i class="fa fa-tags"></i> Dados Pessoais
              </legend>
              <div class="form-group field">
                <label for="nome" class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-9">
                   <input type="text" value="<%=@patient.name %>" class="form-control" disabled/>
                </div>
              </div>
              <div class="form-group">
                <label for="dataNasc" class="col-sm-2 control-label">Data de Nasc.</label>
                <div class="col-sm-9">
                  <input type="text" value="<%=@patient.birthdate%>" class="form-control" disabled />
                </div>
              </div>
              <div class="form-group">
                <label for="sexo" class="col-sm-2 control-label">Sexo</label>
                <div class="col-sm-9">
                <input type="text" value="<%=@patient.genre %>" class="form-control" disabled/>
                </div>
              </div>
              <div class="form-group">
                <label for="cpf" class="control-label col-sm-2">CPF</label>
                <div class="col-sm-9">
                    <input type="text" value="<%=@patient.cpf %>" class="form-control" disabled/>
                </div>
              </div>
              <legend>
                <i class="fa fa-user"></i> Dados de perfil
              </legend>
              <div class="form-group">
                <label for="peso" class="control-label col-sm-2">Peso</label>
                <div class="col-sm-9">
                  <input type="text" value="<%=@patient.weigth %>" class="form-control" disabled/>
                </div>
              </div>
              <div class="form-group">
                <label for="altura" class="control-label col-sm-2">Altura(m)</label>
                <div class="col-sm-9">
                      <input type="text" value="<%=@patient.heigth %>" class="form-control" disabled/>
                </div>
              </div>
              <div class="form-group">
                <label for="bf" class="control-label col-sm-2">BF</label>
                <div class="col-sm-9">
                   <input type="text" value="<%=@patient.bf %>" class="form-control" disabled/>
                </div>
              </div>
              <div class="form-group">
                <label for="objetivo" class="control-label col-sm-2">Objetivo</label>
                <div class="col-sm-9">
                  <input type="text" value="<%=@patient.objective %>" class="form-control" disabled/>
                </div>
              </div>
              <div class="form-group">
                <label for="observacoes" class="control-label col-sm-2">Observações</label>
                <div class="col-sm-9">
                		<input type="text" value="<%=@patient.observations %>" class="form-control" disabled/>
                </div>
              </div>
              <legend>
                <i class="fa fa-map-marker"></i> Dados de Endereço
              </legend>

              <div class="form-group">
                <label for="bairro" class="control-label col-sm-2">Bairro</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control" value="<%= @patient.address.district %>" disabled />
                </div>
              </div>
              <div class="form-group">
                <label for="rua" class="control-label col-sm-2">Rua</label>
                <div class="col-sm-5">
                  <input type="text" class="form-control" value="<%= @patient.address.street %>" disabled />
                </div>
                <label for="numero" class="control-label col-sm-2">Número</label>
                <div class="col-sm-2">
                	<input type="text" class="form-control" value="<%= @patient.address.number %>" disabled />
                </div>
              </div>
              <div class="form-group">
                <label for="cep" class="control-label col-sm-2">CEP</label>
                <div class="col-sm-5">
                  <input type="text" class="form-control" value="<%= @patient.address.cep %>" disabled />
                </div>
                <label for="referencia" class="control-label col-sm-2">Referência</label>
                <div class="col-sm-2">
                  <input type="text" class="form-control" value="<%= @patient.address.reference %>" disabled />
                </div>
              </div>
              <div class="form-group">
                <label for="cidade" class="control-label col-sm-2">Cidade</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control" value="<%= @patient.address.city %>" disabled/>
                </div>
              </div>
              <div class="form-group" disabled>
                <label for="estado" class="control-label col-sm-2">Estado</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control" value="<%= @patient.address.state %>" disabled/>
                </div>
              </div>
              <legend>
                <i class="fa fa-envelope"></i> Dados de Contato
              </legend>
              <div class="form-group">
                <label for="telefone" class="control-label col-sm-2">Telefone</label>
                <div class="col-sm-9">
                <input type="text" value="<%=@patient.telephone %>" class="form-control" disabled/>
                </div>
              </div>
              <div class="form-group">
                <label for="email" class="control-label col-sm-2">E-mail</label>
                <div class="col-sm-9">
                    <input type="text" value="<%=@patient.email %>" class="form-control" disabled/>
                </div>
              </div>
              <legend>
                <i class="fa fa-lock"></i> Dados da Conta
              </legend>
              <div class="form-group">
                <label for="usuario" class="control-label col-sm-2">Login</label>
                <div class="col-sm-9">
                   <input type="text" value="<%=@patient.login %>" class="form-control" disabled/>
                </div>
              </div>
              <div class="form-group">
                <label for="senha" class="control-label col-sm-2">Senha</label>
                <div class="col-sm-9">
                	<input type="text" value="<%= @patient.password %>" class="form-control" disabled/>
                </div>
              </div>
            </div>
            </div>
              </div>
          </div>
        </div>
      </div>
		</div>
	</div>
	<%= render "privates/footerprivate" %>
</div>
