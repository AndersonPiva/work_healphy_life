<div class="skin-blue sidebar-mini">
	<div class="wrapper">
		<header class="main-header">
			<%= render "privates/navbarprivate" %>
		</header>
		<aside class="main-sidebar">
			<%= render "privates/menubar" %>
		</aside>
		<div class="content-wrapper">
      <div class="perfil-content">
        <div class="panel panel-default col-xs-10 col-xs-offset-1 min-height">
					<div id="notice" class="col-xs-offset-1">
						<%= notice %>
					</div>
          <h1 class="col-xs-offset-1"><i class="fa fa-bullseye"></i> <%= t('trainings') %></h1>
          <h4 class="col-xs-offset-1"><%= t('trainings_one') %></h4>
          <div class="div-content">
            <%= link_to t('register_nt'), new_admin_training_path, class:'btn btn-primary col-xs-offset-1 fa fa-plus-circle' %>
          </div>
          <div class="table-responsive col-xs-12 div-content">
            <table class="table table-hover">
              <tr>
                <td class="text-center"><strong><%= t('patient') %></strong></td>
                <td class="text-center"><strong><%= t('day_week') %></strong></td>
                <td class="text-center"><strong><%= t('muscular_groups') %></strong></strong></td>
                <td class="text-center"><strong><%= t('description') %></strong></td>
                <td class="text-center"><strong><%= t('date_start') %></strong></td>
                <td class="text-center"><strong><%= t('date_end') %></strong></td>
                <td class="text-center"><strong><%= t('duration') %></strong></td>
                <td class="text-center"><strong><%= t('options') %></strong></td>
              </tr>
							<% @trainings_for_user.each do |training| %>
								<tr>
									<td class="text-center">
										<%= training.patient.name%>
									</td>
									<td class="text-center">
										<%= training.weekDay%>
									</td>
									<td class="text-center">
										<%= training.muscularGroups%>
									</td>
									<td class="text-center">
										<%= training.description%>
									</td>
									<td class="text-center">
										<%= training.dateStart%>
									</td>
									<td class="text-center">
										<%= training.dateEnd%>
									</td>
									<td class="text-center">
										<%= training.duration%>
									</td>
									<td class="text-center">
										<%= link_to '', admin_training_path(training), title: t('details'), class: 'btn btn-success btn-xs fa fa-ellipsis-h' %> <%= link_to '', edit_admin_training_path(training), title: t('edit'), class: 'btn btn-primary btn-xs fa fa-pencil' %> <%= link_to '', admin_training_path(training), method: :delete, data: { confirm: 'Are you sure?' }, title:'Delete', class: 'btn btn-danger btn-xs fa fa-times'  %>
									</td>
								</tr>
							<% end %>
            </table>
          </div>
        </div>
      </div>
		</div>
	</div>
	<%= render "privates/footerprivate" %>
</div>
