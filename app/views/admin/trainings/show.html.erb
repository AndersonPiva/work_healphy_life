<div class="skin-blue sidebar-mini">
	<div class="wrapper">
		<header class="main-header">
			<%= render "privates/navbarprivate" %>
		</header>
		<aside class="main-sidebar">
			<%= render "privates/menubar" %>
		</aside>
		<div class="content-wrapper">
      <div class="perfil-content">
        <div class="panel panel-default col-xs-10 col-xs-offset-1">
          <h1 class="col-xs-offset-1"><i class="fa fa-bullseye"></i> <%= t('details_of_training') %></h1>
          <h4 class="col-xs-offset-1"><%= t('details_of_training_one') %></h4>
          <div class="div-content">
            <div class="panel panel-default col-xs-10 col-xs-offset-1">
                <legend>
                  <i class="fa fa-tags"></i> <%= t('general_data') %>
                </legend>
                <div class="form-horizontal">
                  <div class="form-group">
                    <label for="paciente" class="control-label col-sm-3"><%= t('patient') %></label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" value="<%= @training.patient.name %>" disabled/>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="weekDay" class="control-label col-sm-3"><%= t('day_week') %></label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" value="<%= @training.weekDay %>" disabled/>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="muscularGroups" class="control-label col-sm-3"><%= t('muscular_groups') %></label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" value="<%= @training.muscularGroups %>" disabled/>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="description" class="control-label col-sm-3"><%= t('description') %></label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" value="<%= @training.description %>" disabled/>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="dataStart" class="control-label col-sm-3"><%= t('date_start') %></label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" value="<%= @training.dateStart.strftime("%d/%m/%y") %>" disabled/>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="dateEnd" class="control-label col-sm-3"><%= t('date_end') %></label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" value="<%= @training.dateEnd.strftime("%d/%m/%y") %>" disabled/>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="duration" class="control-label col-sm-3"><%= t('duration') %></label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" value="<%= @training.duration.strftime("%H:%m") %>" disabled/>
                    </div>
                  </div>
                </div>
                <legend>
                  <i class="fa fa-star"></i> <%= t('exercises') %>
                </legend>
                <div class="table-responsive">
                  <table class="table table-hover">
                    <tr>
                      <td class="text-center">
                        <strong><%= t('name') %></strong>
                      </td>
                      <td class="text-center">
                        <strong><%= t('description') %></strong>
                      </td>
                      <td class="text-center">
                        <strong><%= t('series') %></strong>
                      </td>
                      <td class="text-center">
                        <strong><%= t('repeats') %></strong>
                      </td>
                      <td class="text-center">
                        <strong><%= t('duration') %></strong>
                      </td>
                    </tr>
                    <% @training.exercises.each do |exercise| %>
                      <tr>
                        <td class="text-center">
                          <%= exercise.name %>
                        </td>
                        <td class="text-center">
                          <%= exercise.description %>
                        </td>
                        <td class="text-center">
                          <%= exercise.series %>
                        </td>
                        <td class="text-center">
                          <%= exercise.repeats %>
                        </td>
                        <td class="text-center">
                          <%= exercise.duration.strftime("%H:%m") %>
                        </td>
                      </tr>
                    <% end %>
                  </table>
                </div>
            </div>
          </div>
        </div>
      </div>
		</div>
	</div>
	<%= render "privates/footerprivate" %>
</div>
