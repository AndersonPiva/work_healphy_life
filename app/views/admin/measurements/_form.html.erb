<%= form_for([:admin,@measurement]) do |f| %>
<%= error_messages(@measurement) %>
<div class="form-horizontal">
  <legend>
    <i class="fa fa-tags"></i>
    <%= t('general_data') %>
  </legend>
  <div class="form-group field">
    <label class="col-sm-3 control-label" for="data"><%= t('date_of') %></label>
    <div class="col-sm-9">
      <%= f.date_select :date %>
    </div>
  </div>
  <div class="form-group field">
    <label class="col-sm-3 control-label" for="name_measure"><%= t('name_measure') %></label>
    <div class="col-sm-9">
        <%= f.text_field :nameMeasure, :placeholder => t('write_name_measure'), class: 'form-control' %>
    </div>
  </div>
  <div class="form-group field">
    <label class="col-sm-3 control-label" for="size"><%= t('size') %></label>
    <div class="col-sm-9">
      <%= f.number_field :size, min: '0', step: '0.1', :placeholder => t('write_name_size'), class: 'form-control' %>
    </div>
  </div>
  <div class="form-group field">
    <label class="control-label col-sm-3" for="patient"><%= t('patient') %></label>
    <div class="col-sm-9">
      <%= f.collection_select(:patient_id, current_user.patients, :id, :name, prompt: t('please_patient') , class: 'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-5">
      <button class="btn btn-primary btn-lg" type="submit">
        <i class="fa fa-save"></i>
        <%= t('save') %>
      </button>
    </div>
  </div>
</div>
<% end %>
