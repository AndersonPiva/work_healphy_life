	<%= render "publics/navbarpublic" %>
	<div class="page-container">
		<div class="container">
			<ul class="list-inline">
				<li>
					<%=link_to '', new_user_session_path, title:'Home', class: 'fa fa-home fa-2x' %>
				</li>
				<li class="lead">
					>
				</li>
				<li>
					<i title="<%= t('sign_in') %>" class="fa fa-user fa-2x"></i>
				</li>
			</ul>
			<div class="div-content">
				<div class="panel panel-default">
					<div class="panel-body">
						<h1><%= t('sign_in') %></h1>
						<div class="div-content">
							<h1><%= t('new_account') %></h1>
							<h4 class="line-height"><%= t('sign_in_description_one') %> <%= link_to t('functions'), functions_path %>  <%= t('sign_in_description_two') %> </h4>
							<h4 class="text-danger line-height">
								<%= t('sign_in_description_terms_of_use') %>
							</p>
						</div>
						<div class="panel-default col-xs-12 col-sm-6 pull-right">
							<div class="panel-body">
								<img alt="Cadastro Slider" src="/assets/cadastre-se.jpg" class="img-responsive" />
							</div>
						</div>
            <%= form_for(resource, :html => {multipart: true}, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
						<div class = "form-personalite">
							<div class="form-group">
								<label for="name" class="col-sm-6"><i class="fa fa-user"></i> <%= t('name') %></label>
								<div class="col-xs-12 col-sm-6">
								 	<%= f.text_field :name, autofocus: true, :placeholder => t('completed_name'), class:'form-control'%>
								</div>
							</div>
							<div class="field form-group">
								<label class="col-sm-6" for="email"><i class="fa fa-envelope"></i> E-mail</label>
								<div class="col-xs-12 col-sm-6">
									 <%= f.email_field :email, autofocus: true, :placeholder => t('email'), class:'form-control' %>
								</div>
							</div>
							<div class="form-group">
								<label class="col-xs-12 col-sm-6" for="password"><i class="fa fa-lock"></i> <%= t('password') %></label>
								<div class="col-xs-12 col-sm-6">
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>
                    <%= f.password_field :password, autocomplete: "off", :placeholder => t('write_password'), class: 'form-control' %>
                </div>
							</div>
							<div class="form-group">
								<label class="col-xs-12 col-sm-7 col-md-6" for="repetesenha"><i class="fa fa-refresh"></i> <%= t('password_confirmation') %></label>
								<div class="col-xs-12 col-sm-6">
									<%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => t('write_confirmation_password'), class:'form-control' %>
								</div>
							</div>
							<div class="form-group">
								<div class="col-xs-12 col-sm-7 col-lg-6">
									<button type="submit" class="btn btn-primary">
									<%= t('sign_in') %>
									</button>
								</div>
							</div>
						</div>
          <% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<%= render "publics/footerpublic" %>
