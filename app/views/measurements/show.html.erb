<div class="skin-blue sidebar-mini new-height">
  <div class="wrapper">
    <header class="main-header">
      <%= render "privates/navbarprivate" %>
    </header>
    <aside class="main-sidebar">
      <%= render "privates/menubar" %>
    </aside>
    <div class="content-wrapper">
      <div class="perfil-content">
        <div class="panel panel-default col-xs-10 col-xs-offset-1">
          <h1 class="col-xs-offset-1">
            <i class="fa fa-arrows-v"></i>
            Detalhes da Medição</h1>
          <h4 class="col-xs-offset-1">Veja os detalhes da medida corporal do seu paciente para acompanhar o seu quadro clínico.</h4>
          <div class="div-content">
            <div class="panel panel-default col-xs-10 col-xs-offset-1">
              <div class="form-horizontal">
                <legend>
                  <i class="fa fa-tags"></i>
                  Dados Gerais
                </legend>
                <div class="form-group">
                  <label class="control-label col-sm-2" for="medida">Medida</label>
                  <div class="col-sm-9">
                    <input class="form-control" disabled type="text" value="<%= @measurement.nameMeasure %>"/>
                  </div>
                </div>
                <div class="form-group">
                  <label for="paciente" class="control-label col-sm-2">Paciente</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" value="<%= @measurement.patient.name%>" disabled/>
                  </div>
                </div>
                <div class="form-group">
                  <label for="data" class="control-label col-sm-2">Data</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" value="<%= @measurement.date %>" disabled/>
                  </div>
                </div>
                <div class="form-group">
                  <label for="tamanho" class="control-label col-sm-2">Tamanho</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" value="<%= @measurement.size %>" disabled/>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render "privates/footerprivate" %>
</div>
