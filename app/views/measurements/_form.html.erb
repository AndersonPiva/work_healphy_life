<%= form_for(@measurement) do |f| %>
<% if @measurement.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@measurement.errors.count, "error") %>
    prohibited this measurement from being saved:</h2>
  <ul>
    <% @measurement.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-horizontal">
  <legend>
    <i class="fa fa-tags"></i>
    Dados Gerais
  </legend>
  <div class="form-group field">
    <label class="col-sm-2 control-label" for="data">Data</label>
    <div class="col-sm-9">
      <%= f.date_select :date %>
    </div>
  </div>
  <div class="form-group field">
    <label class="col-sm-2 control-label" for="horario">Nome da Medida</label>
    <div class="col-sm-9">
        <%= f.text_field :nameMeasure, :placeholder => 'Digite o nome da medida', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group field">
    <label class="col-sm-2 control-label" for="preco">Tamanho</label>
    <div class="col-sm-9">
      <%= f.text_field :size, :placeholder => 'Digite o tamanho da medida', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group field">
    <label class="control-label col-sm-2" for="description">Paciente</label>
    <div class="col-sm-9">
      <%= f.collection_select(:patient_id, current_user.patients, :id, :name, prompt: 'Por favor selecione o paciente' , class: 'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-5">
      <button class="btn btn-primary btn-lg" type="submit">
        <i class="fa fa-save"></i>
        Salvar
      </button>
    </div>
  </div>
</div>
<% end %>
