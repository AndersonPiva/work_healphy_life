<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

  <div class="form-personalite div-content">
    <div class="form-group">
      <label class="col-xs-6" for="name" ><%= t('name') %></label>
      <div class=" col-xs-12 col-sm-6">
        <%= f.text_field :name, :placeholder => t('completed_name'), class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-xs-6" for="email" >E-mail</label>
      <div class="col-xs-12 col-sm-6">
        <%= f.email_field :email, :placeholder => t('email'), class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-xs-6" for="assunto" ><%= t('topic') %></label>
      <div class="col-xs-12 col-sm-6">
        <%= f.text_field :subject, :placeholder => t('topic_treated'), class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-xs-6" for="assunto" ><%= t('message') %></label>
      <div class="col-xs-12 col-sm-6">
        <%= f.text_area :message, :placeholder => t('write_message'), class: 'form-control' %>
        <button type="submit" class="btn btn-primary">
          <%= t('send') %>
        </button>
      </div>
    </div>
  </div>
<% end %>
