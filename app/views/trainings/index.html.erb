<div class="skin-blue sidebar-mini">
	<div class="wrapper">
		<header class="main-header">
			<%= render "privates/navbarprivate" %>
		</header>
		<aside class="main-sidebar">
			<%= render "privates/menubar" %>
		</aside>
		<div class="content-wrapper">
      <div class="perfil-content">
        <div class="panel panel-default col-xs-10 col-xs-offset-1">
          <h1 class="col-xs-offset-1"><i class="fa fa-bullseye"></i> Treinos</h1>
          <h4 class="col-xs-offset-1">Tenha acesso a todos os treinos de seus pacientes de todas as suas clínicas, adicione novos, atualize-os...</h4>
          <div class="div-content">
            <a href="/newtraining" class="btn btn-primary margin col-xs-offset-1"><i class="fa fa-plus-circle"></i> Cadastrar Novo Treino</a>
            <div class="panel panel-default col-xs-10 col-xs-offset-1 div-content">
              <form action="" method="post" class="form-horizontal">
                <legend>
                  <i class="fa fa-search"></i> Pesquisar Treinos
                </legend>
                <div class="form-group col-xs-12 col-sm-6">
                  <input type="text" placeholder="Digite o nome do paciente" class="form-control" />
                </div>
                <div class="form-group col-xs-12 col-sm-6">
                      <input type="text" placeholder="Digite os grupos musculares" class="form-control col-sm-offset-2" />
                </div>
                <div class="form-group">
                  <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary">
                      <i class="fa fa-search"></i> Pesquisar
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <div class="table-responsive col-xs-12">
            <table class="table table-hover">
              <tr>
                <td class="text-center"><strong>Paciente</strong></td>
                <td class="text-center"><strong>Dia da Semana</strong></td>
                <td class="text-center"><strong>Grupos Musculares</strong></strong></td>
                <td class="text-center"><strong>Descrição</strong></td>
                <td class="text-center"><strong>Data de Início</strong></td>
                <td class="text-center"><strong>Data de término</strong></td>
                <td class="text-center"><strong>Duração</strong></td>
                <td class="text-center"><strong>Opções</strong></td>
              </tr>
							<% @trainings_for_user.each do |training| %>
								<tr>
									<td class="text-center">
										<%= training.patient.name%>
									</td>
									<td class="text-center">
										<%= training.weekDay%>
									</td>
									<td class="text-center">
										<%= training.muscularGroups%>
									</td>
									<td class="text-center">
										<%= training.description%>
									</td>
									<td class="text-center">
										<%= training.dateStart%>
									</td>
									<td class="text-center">
										<%= training.dateEnd%>
									</td>
									<td class="text-center">
										<%= training.duration%>
									</td>
									<td class="text-center">
										<%= link_to '', training, title: 'Details', class: 'btn btn-success btn-xs fa fa-ellipsis-h' %> <%= link_to '', edit_training_path(training), title: 'Editar', class: 'btn btn-primary btn-xs fa fa-pencil' %> <%= link_to '', training, method: :delete, data: { confirm: 'Are you sure?' }, title:'Delete', class: 'btn btn-danger btn-xs fa fa-times'  %>
									</td>
								</tr>
							<% end %>
            </table>
          </div>
        </div>
      </div>
		</div>
	</div>
	<%= render "privates/footerprivate" %>
</div>
