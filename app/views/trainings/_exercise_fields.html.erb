<div class="nested-fields">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Exercício</h3>
    </div>
    <div class="panel-body form-horizontal">
      <div class="form-group field">
        <label for="nome" class="control-label col-sm-2">Nome</label>
        <div class="col-sm-9">
          <%= f.text_field :name, class:'form-control', :placeholder => 'Digite o nome do exercicio' %>
        </div>
      </div>
      <div class="form-group field">
        <label for="descricao" class="control-label col-sm-2">Descrição</label>
        <div class="col-sm-9">
            <%= f.text_area :description, class: 'form-control', :placeholder => 'Digite a descrição do exercício' %>
        </div>
      </div>
      <div class="form-group field">
        <label for="series" class="control-label col-sm-2">Séries</label>
        <div class="col-sm-9">
            <%= f.text_field :series, class:'form-control', :placeholder => 'Digite o número de séries para o exercício' %>
        </div>
      </div>
      <div class="form-group field">
        <label for="repeticoes" class="control-label col-sm-2">Repetições</label>
        <div class="col-sm-9">
            <%= f.text_field :repeats, class: 'form-control', :placeholder => 'Digite o número de repetições por série' %>
        </div>
      </div>
      <div class="form-group field">
        <label for="duracao" class="control-label col-sm-2">Duração</label>
        <div class="col-sm-9">
              <%= f.time_select :duration %>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <%= link_to_remove_association "Remover Exercício", f, :class => "btn btn-danger" %>
    </div>
  </div>
</div>
